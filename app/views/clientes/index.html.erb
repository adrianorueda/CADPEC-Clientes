<h1>Cadastro de Clientes</h1>

  <% form_for :dump, :url=>{:controller=>"clientes", :action=>"new"}, :html => { :multipart => true } do |f| -%>
 <table>
	<tr>
	  <td colspan='2'>
		<%= submit_tag 'Cadastrar cliente'-%>
	  </td>
 <% end -%>
   <% form_for :dump, :url=>{:controller=>"clientes", :action=>"reports"}, :html => { :multipart => true } do |f| -%>
	  <td colspan='2'>
		<%= submit_tag 'Relatórios'-%>
	  </td>
 <% end -%>
   <% form_for :dump, :url=>{:controller=>"home"}, :html => { :multipart => true } do |f| -%>
	  <td colspan='2'>
		<%= submit_tag 'Início'-%>
	  </td>
	</tr>
 </table>
 <% end -%>

<table border="1" cellpadding="5" cellspacing="1">
  <tr>
    <th>Num. Cliente</th>
	<th>Nome</th>
    <th>Endereco</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Cep</th>
	<th>Fone</th>
	<th>Ações</th>
  </tr>

<% for cliente in @clientes %>
  <tr>
    <td><%=h cliente.id %></td>
	<td><%=link_to cliente.nome, cliente_path(cliente) %></td>
    <td><%=h cliente.endereco %></td>
    <td><%=h cliente.cidade %></td>
    <td><%=h cliente.estado %></td>
    <td><%=h cliente.cep %></td>
	<td>
		<%=h cliente.operadora %>
		<%=h cliente.fone %>
	</td>
    <td>
  		<%= link_to 'Exibir', cliente %>
    	<%= link_to 'Editar', edit_cliente_path(cliente) %>
    	<%= link_to 'Excluir', cliente, :confirm => 'Confirma?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Cadastrar cliente', new_cliente_path %> | <%= link_to 'Topo', clientes_path %>
